---
interface Proyecto {
  readonly nombre: string;
  readonly tipo: string;
  readonly descripcion: string;
  readonly imagen: string;
  readonly link: string;
  readonly repo?: string;
}

const proyectos: ReadonlyArray<Proyecto> = [
  {
    nombre: 'Club Atlético Unión de Clarke',
    tipo: 'Sitio Institucional',
    descripcion: 'Presencia digital completa para el club: noticias, eventos y toda la información institucional en un solo lugar, siempre disponible para los socios.',
    imagen: '/portfolio/union-clarke.webp',
    link: 'https://uniondeclarke.com.ar/',
  },
  {
    nombre: 'Tiempo Construcciones',
    tipo: 'Landing Page',
    descripcion: 'Landing page pensada para generar consultas: presentación de servicios, galería de obras y formulario de contacto directo para captar clientes.',
    imagen: '/portfolio/tiempo-construcciones.webp',
    link: 'https://tiempoconstrucciones.vercel.app/',
    repo: 'https://github.com/RamirezDiazCarlos/tiempoconstrucciones',
  },
  {
    nombre: 'DolarActual',
    tipo: 'Web App',
    descripcion: 'Herramienta para consultar todas las cotizaciones del dólar en tiempo real. Información actualizada al instante, sin publicidad ni distracciones.',
    imagen: '/portfolio/dolar-actual.webp',
    link: 'https://dolaractual.netlify.app/',
    repo: 'https://github.com/RamirezDiazCarlos/DolarActual',
  },
  {
    nombre: 'Luz de Arcanos',
    tipo: 'Web App con IA',
    descripcion: 'Aplicación de lecturas de tarot generadas por inteligencia artificial. Cada consulta es única, personalizada y entregada en segundos.',
    imagen: '/portfolio/luzDeArcanos.webp',
    link: 'https://luzdearcanos.vercel.app/',
    repo: 'https://github.com/RamirezDiazCarlos/TarotWeb',
  },
];
---

<section id="portfolio" class="portfolio-section">
  <div class="container">
    <header class="section-header animate-on-scroll">
      <span class="section-tag">PORTFOLIO</span>
      <h2 class="section-title">
        Proyectos que<br />
        <span class="gradient-text">hablan por sí solos</span>
      </h2>
    </header>

    <div class="portfolio-grid">
      {proyectos.map((proyecto, index) => (
        <article
          class="portfolio-card animate-on-scroll"
          style={`animation-delay: ${0.1 * (index + 1)}s`}
        >
          <a
            href={proyecto.link}
            target="_blank"
            rel="noopener noreferrer"
            class="portfolio-image-link"
            aria-label={`Ver ${proyecto.nombre}`}
          >
            <div class="portfolio-image-wrapper">
              <img
                src={proyecto.imagen}
                alt={`Captura de ${proyecto.nombre}`}
                width="800"
                height="500"
                loading="lazy"
                class="portfolio-image"
              />
            </div>
          </a>
          <div class="portfolio-content">
            <span class="portfolio-tipo">{proyecto.tipo}</span>
            <h3 class="portfolio-nombre">{proyecto.nombre}</h3>
            <p class="portfolio-descripcion">{proyecto.descripcion}</p>
            <div class="portfolio-links">
              <a
                href={proyecto.link}
                target="_blank"
                rel="noopener noreferrer"
                class="portfolio-link-btn portfolio-link-primary"
              >
                Ver proyecto
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <line x1="7" x2="17" y1="17" y2="7"></line>
                  <polyline points="7 7 17 7 17 17"></polyline>
                </svg>
              </a>
              {proyecto.repo && (
                <a
                  href={proyecto.repo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="portfolio-link-btn portfolio-link-secondary"
                >
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                  </svg>
                  Ver código
                </a>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .portfolio-section {
    padding: 120px 0;
    position: relative;
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 80px;
  }

  .section-tag {
    display: inline-block;
    padding: 8px 20px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    font-family: var(--font-mono);
    font-size: 12px;
    letter-spacing: 2px;
    color: var(--accent);
    margin-bottom: 24px;
  }

  .section-title {
    font-size: clamp(40px, 6vw, 64px);
    font-weight: 800;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dim) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .portfolio-card {
    position: relative;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    color: inherit;
    transition: border-color var(--transition), transform var(--transition);
    display: flex;
    flex-direction: column;
  }

  .portfolio-card:hover {
    border-color: var(--border-hover);
    transform: translateY(-4px);
  }

  .portfolio-image-link {
    display: block;
    text-decoration: none;
  }

  .portfolio-image-wrapper {
    overflow: hidden;
    aspect-ratio: 16 / 10;
    background: var(--bg-tertiary);
  }

  .portfolio-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition);
  }

  .portfolio-image-link:hover .portfolio-image {
    transform: scale(1.03);
  }

  .portfolio-content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    flex: 1;
  }

  .portfolio-tipo {
    display: inline-block;
    width: fit-content;
    padding: 4px 12px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    font-size: 11px;
    letter-spacing: 1px;
    color: var(--accent);
    text-transform: uppercase;
  }

  .portfolio-nombre {
    font-size: 20px;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.3;
  }

  .portfolio-descripcion {
    font-size: 14px;
    color: var(--text-muted);
    line-height: 1.6;
    flex: 1;
  }

  .portfolio-links {
    display: flex;
    gap: 10px;
    margin-top: 6px;
    flex-wrap: wrap;
  }

  .portfolio-link-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: var(--radius-sm);
    font-size: 13px;
    font-weight: 500;
    text-decoration: none;
    transition: all var(--transition);
  }

  .portfolio-link-primary {
    background: var(--accent);
    color: var(--bg-primary);
  }

  .portfolio-link-primary:hover {
    background: var(--accent-dim);
  }

  .portfolio-link-secondary {
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    color: var(--text-secondary);
  }

  .portfolio-link-secondary:hover {
    border-color: var(--border-hover);
    color: var(--accent);
  }

  @media (max-width: 1024px) {
    .portfolio-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .portfolio-section {
      padding: 80px 0;
    }

    .section-header {
      margin-bottom: 60px;
    }

    .portfolio-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
      margin: 0 auto;
    }

    .portfolio-content {
      padding: 20px;
    }

    .portfolio-nombre {
      font-size: 18px;
    }
  }
</style>
