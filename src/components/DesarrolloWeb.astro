---
/**
 * Sección de Desarrollo Web
 * Ofrece servicios de creación de páginas web profesionales
 */

interface Feature {
  readonly text: string;
  readonly icon: string;
}

const features: ReadonlyArray<Feature> = [
  {
    text: 'Diseño moderno y minimalista',
    icon: '<path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="7.5 4.21 12 6.81 16.5 4.21"></polyline><polyline points="7.5 19.79 7.5 14.6 3 12"></polyline><polyline points="21 12 16.5 14.6 16.5 19.79"></polyline><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" x2="12" y1="22.08" y2="12"></line>'
  },
  {
    text: 'Optimizada para celulares y tablets',
    icon: '<rect width="7" height="12" x="2" y="6" rx="1"></rect><path d="M13 8.32a7.43 7.43 0 0 1 0 7.36"></path><path d="M16.46 6.21a11.76 11.76 0 0 1 0 11.58"></path><path d="M19.91 4.1a15.91 15.91 0 0 1 .01 15.8"></path>'
  },
  {
    text: 'Información clara y enfocada',
    icon: '<circle cx="12" cy="12" r="10"></circle><path d="M12 16v-4"></path><path d="M12 8h.01"></path>'
  },
  {
    text: 'Velocidad y rendimiento',
    icon: '<path d="M3 7V5a2 2 0 0 1 2-2h2"></path><path d="M17 3h2a2 2 0 0 1 2 2v2"></path><path d="M21 17v2a2 2 0 0 1-2 2h-2"></path><path d="M7 21H5a2 2 0 0 1-2-2v-2"></path><polyline points="9 10 9 9 10 9"></polyline><path d="M15 14a5 5 0 1 1-3-9 4.5 4.5 0 0 0 0 9 5 5 0 0 1 3 0"></path>'
  },
  {
    text: 'Implementación rápida',
    icon: '<path d="M12 2v20"></path><path d="m15 5 3 3-3 3"></path><path d="m9 11-3 3 3 3"></path>'
  },
  {
    text: 'Integración con WhatsApp, formularios y redes',
    icon: '<circle cx="12" cy="12" r="10"></circle><path d="M8 14s1.5 2 4 2 4-2 4-2"></path><line x1="9" x2="9.01" y1="9" y2="9"></line><line x1="15" x2="15.01" y1="9" y2="9"></line>'
  }
];
---

<section id="desarrollo-web" class="desarrollo-web-section">
  <div class="container">
    <!-- Header -->
    <div class="section-header animate-on-scroll">
      <span class="section-tag">DESARROLLO WEB</span>
      <h2 class="section-title">
        Tu negocio merece una<br />
        <span class="gradient-text">presencia online profesional</span>
      </h2>
      <p class="section-description">
        Sitios web claros, visuales y optimizados para mostrar lo esencial de tu negocio:
        servicios, información y contacto directo. Diseño responsive, estética profesional y tiempos
        de carga veloces. <strong>Tu presencia online, sin complicarte la vida.</strong>
      </p>
    </div>

    <!-- Content grid -->
    <div class="content-grid">
      <!-- Features -->
      <div class="features-container animate-on-scroll">
        <h3 class="features-title">Puntos destacados</h3>
        <div class="features-list">
          {features.map((feature) => (
            <div class="feature-item">
              <div class="feature-icon" aria-hidden="true">
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  set:html={feature.icon}
                />
              </div>
              <span>{feature.text}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA Card -->
      <div class="cta-card animate-on-scroll">
        <div class="cta-content">
          <div class="cta-icon-wrapper">
            <svg
              width="48"
              height="48"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect width="18" height="18" x="3" y="3" rx="2"></rect>
              <path d="M7 7h10"></path>
              <path d="M7 12h10"></path>
              <path d="M7 17h10"></path>
            </svg>
          </div>

          <h3 class="cta-title">
            Impulsá tu negocio con una web profesional desde hoy
          </h3>

          <p class="cta-description">
            Empezá a recibir consultas online y mostrá tus servicios 24/7
          </p>

          <a
            href="#contacto"
            class="cta-button"
            aria-label="Contactar para desarrollo web"
          >
            <span>Solicitar presupuesto</span>
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              aria-hidden="true"
            >
              <line x1="5" x2="19" y1="12" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>

        <!-- Decorative elements -->
        <div class="cta-glow" aria-hidden="true"></div>
        <div class="cta-border"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .desarrollo-web-section {
    padding: 120px 0;
    position: relative;
    overflow: hidden;
  }

  /* Background effect */
  .desarrollo-web-section::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(0, 255, 136, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  /* Header */
  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 80px;
  }

  .section-tag {
    display: inline-block;
    padding: 8px 20px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    font-family: var(--font-mono);
    font-size: 12px;
    letter-spacing: 2px;
    color: var(--accent);
    margin-bottom: 24px;
  }

  .section-title {
    font-size: clamp(40px, 6vw, 64px);
    font-weight: 800;
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin-bottom: 24px;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dim) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .section-description {
    font-size: 18px;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .section-description strong {
    color: var(--accent);
    font-weight: 600;
  }

  /* Content grid */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: start;
  }

  /* Features */
  .features-container {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 40px;
  }

  .features-title {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 32px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .features-title::before {
    content: '';
    width: 4px;
    height: 24px;
    background: var(--accent);
    border-radius: 2px;
  }

  .features-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    transition: all var(--transition);
  }

  .feature-item:hover {
    border-color: var(--accent);
    transform: translateX(4px);
  }

  .feature-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--accent);
  }

  .feature-item span {
    font-size: 15px;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  /* CTA Card */
  .cta-card {
    position: relative;
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    padding: 48px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100%;
  }

  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .cta-icon-wrapper {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(0, 255, 136, 0.1) 0%, transparent 100%);
    border: 2px solid var(--accent);
    border-radius: 50%;
    color: var(--accent);
    margin-bottom: 8px;
  }

  .cta-title {
    font-size: 28px;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.3;
    max-width: 400px;
  }

  .cta-description {
    font-size: 16px;
    color: var(--text-muted);
    line-height: 1.6;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 18px 36px;
    background: var(--accent);
    color: var(--bg-primary);
    border: none;
    border-radius: var(--radius-md);
    font-size: 16px;
    font-weight: 600;
    font-family: inherit;
    text-decoration: none;
    transition: all var(--transition);
    margin-top: 8px;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 40px rgba(0, 255, 136, 0.3);
  }

  .cta-button svg {
    transition: transform var(--transition);
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Glow effect */
  .cta-glow {
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, var(--accent) 0%, transparent 50%);
    border-radius: var(--radius-lg);
    opacity: 0;
    transition: opacity var(--transition);
    z-index: 0;
    filter: blur(20px);
  }

  .cta-card:hover .cta-glow {
    opacity: 0.2;
  }

  .cta-border {
    position: absolute;
    inset: 0;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    transition: border-color var(--transition);
    pointer-events: none;
  }

  .cta-card:hover .cta-border {
    border-color: var(--accent);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }
  }

  @media (max-width: 768px) {
    .desarrollo-web-section {
      padding: 80px 0;
    }

    .section-header {
      margin-bottom: 60px;
    }

    .features-container {
      padding: 32px 24px;
    }

    .cta-card {
      padding: 40px 24px;
    }

    .cta-title {
      font-size: 24px;
    }

    .cta-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
